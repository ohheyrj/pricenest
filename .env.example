# Price Tracker Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Configuration
DEBUG=false
SECRET_KEY=CHANGE_ME_IN_PRODUCTION
HOST=0.0.0.0
PORT=3000

# Database Configuration
# Options: sqlite, postgresql, mysql
DATABASE_TYPE=sqlite

# SQLite Configuration (when DATABASE_TYPE=sqlite)
SQLITE_PATH=data/price_tracker.db

# PostgreSQL Configuration (when DATABASE_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DATABASE=price_tracker

# MySQL Configuration (when DATABASE_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=CHANGE_ME_IN_PRODUCTION
MYSQL_DATABASE=price_tracker

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=*

# Flask Environment
FLASK_ENV=production