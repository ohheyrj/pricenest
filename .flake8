[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    node_modules,
    dist,
    htmlcov,
    .pytest_cache
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811