# Docker Environment Configuration
# Copy this file to .env for Docker deployments

# Application Configuration
DEBUG=false
SECRET_KEY=your-very-secure-secret-key-change-in-production
HOST=0.0.0.0
PORT=8000

# Database Configuration for Docker
DATABASE_TYPE=postgresql

# PostgreSQL Configuration (for docker-compose)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=pricetracker
POSTGRES_PASSWORD=secure-postgres-password-change-me
POSTGRES_DATABASE=price_tracker

# MySQL Configuration (alternative - for docker-compose)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=pricetracker
MYSQL_PASSWORD=secure-mysql-password-change-me
MYSQL_DATABASE=price_tracker
MYSQL_ROOT_PASSWORD=secure-mysql-root-password-change-me

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Configuration
CORS_ORIGINS=*

# Flask Environment
FLASK_ENV=production

# Build Arguments (for CI/CD)
BUILD_DATE=
VERSION=latest
VCS_REF=